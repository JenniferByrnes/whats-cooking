<section id="create-recipe" class="hide">

  <form class="new-recipe-form">
    <h2>Create New Recipe</h2>
    <div>
      <label for="recipe-title">Title</label>
      <input type="text" id="recipe-title" name="recipe-title" />
    </div>
    <div>
      <label for="recipe-instructions">Instructions</label>
      <input type="text" id="recipe-instructions" name="recipe-instructions" />
    </div>
    <div>
      <label for="recipe-ingredients">Ingredients</label>
      <input type="text" id="recipe-ingredients" name="recipe-ingredients" />
    </div>
    <div>
      <label for="recipe-cuisines">Choose A Cuisine</label>
      <select cuisine="recipe-cuisines" id="recipe-cuisines">
      <option value="American">Indian</option>
      <option value="French">Japanese</option>
      <option value="Italian">Italian</option>
      <option value="Brazilian">Mexican</option>
      <option value="African">Chinese</option>
      <option value="German">Turkish</option>
     <option value="Mexican">Thai</option>
     <option value="Mexican">French</option>
     <option value="Mexican">Greek</option>
     <option value="Mexican">Arab</option>
     <option value="Mexican">Brazilian</option>
</select>
    </div>
    <div>
      <label for="recipe-serving">Servings</label>
      <input type="number" min="0" id="recipe-serving" name="recipe-serving" />
    </div>
    <div>
      <label for="recipe-image">Immge</label>
      <input type="text" id="recipe-image" name="recipe-image" />
    </div>
        <div>
      <label for="recipe-summary">Summary</label>
      <input type="text" id="recipe-summary" name="recipe-summary" />
    </div>
        <div>
      <label for="recipe-type">Type</label>
      <input type="text" id="recipe-type" name="recipe-type" />
    </div>
    <button type="add" class="btn">Add</button>
  </form>
</section>

<section id="display-recipes">
  <h2>Your Recipes</h2>
  <button id="create-btn" type="submit" class="btn">Create New Recipe</button>
  <ol>
    {{#each recipes as |recipe|}}
    <li>
      {{> recipe-info recipe}}
      <a href="/dashboard/edit/{{recipe.id}}" class="edit-link">Edit recipe</a>
    </li>
    {{/each}}
  </ol>
</section>


<script src="/javascript/add-recipe.js"></script>