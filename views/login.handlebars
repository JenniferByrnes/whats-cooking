<body
  class="body-bg min-h-screen pt-12 md:pt-20 pb-6 px-2 md:px-0"
  style="font-family:'Lato',sans-serif;"
>
  <main
    class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl"
  >
    <style>
      .body-bg { background-color: #046f09; background-image:
      linear-gradient(315deg, #238896 0%, #5f72be 74%); }
    </style>
    <section>
      <h3 class="font-bold text-2xl">Welcome to What's Cooking</h3>
      <p class="text-gray-600 pt-2">Sign in to your account.</p>
    </section>

    <section class="mt-10">
      <form class="flex flex-col login-form" method="POST" action="#">
        <div class="mb-6 pt-3 rounded bg-gray-200">
          <label
            class="block text-gray-700 text-sm font-bold mb-2 ml-3"
            for="username-login"
          >Username</label>
          <input
            type="text"
            id="username-login"
            class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3"
          />
        </div>
        <div class="mb-6 pt-3 rounded bg-gray-200">
          <label
            class="block text-gray-700 text-sm font-bold mb-2 ml-3"
            for="password-login"
          >Password</label>
          <input
            type="password"
            id="password-login"
            class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3"
          />
        </div>
        <button
          class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200"
          type="submit"
        >Sign In</button>
      </form>
    </section>
  </main>
